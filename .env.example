# SAT-SHINE Environment Configuration
# Copy this to .env and update with your production values

# Django Settings
SECRET_KEY=your-super-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# Enable PostgreSQL + PostGIS
USE_POSTGRESQL=true

# Database Configuration (PostgreSQL + PostGIS)
DB_NAME=sat_shine_db
DB_USER=sat_shine_user
DB_PASSWORD=your_secure_database_password
DB_HOST=localhost
DB_PORT=5432

# GIS Library Paths (Update based on your system)
# Windows
GDAL_LIBRARY_PATH=C:\OSGeo4W64\bin\gdal304.dll
GEOS_LIBRARY_PATH=C:\OSGeo4W64\bin\geos_c.dll

# Linux/Ubuntu
# GDAL_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu/libgdal.so
# GEOS_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu/libgeos_c.so

# macOS (with Homebrew)
# GDAL_LIBRARY_PATH=/opt/homebrew/lib/libgdal.dylib
# GEOS_LIBRARY_PATH=/opt/homebrew/lib/libgeos_c.dylib

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Logging Level
LOG_LEVEL=INFO