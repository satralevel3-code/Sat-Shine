# Production Environment Variables
# Copy this file to .env and update values for production

# Security
SECRET_KEY=your-super-secret-production-key-min-50-chars-random
DEBUG=False

# Database
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-app.railway.app

# Optional: PostgreSQL flag
USE_POSTGRESQL=true

# Database credentials (if not using DATABASE_URL)
DB_NAME=sat_shine_db
DB_USER=sat_shine_user
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432

# Railway Environment (auto-detected)
RAILWAY_ENVIRONMENT=production

# Logging Level
DJANGO_LOG_LEVEL=INFO